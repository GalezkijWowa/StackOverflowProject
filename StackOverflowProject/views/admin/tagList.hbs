<!DOCTYPE html>
<html lang="en">
<head>
    <title>{{user.username}}</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto|Varela+Round">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="../../public/stylesheets/list.css" />
    <link rel="stylesheet" href="../../public/bootstrap-3.3.7-dist/css/bootstrap.min.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="../../public/bootstrap-3.3.7-dist/js/bootstrap.min.js"></script>
    <script src="../../public/javascripts/tags.js"></script>
</head>
<body>
    {{> layout}}
    <div class="container">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-6">
                        <h2>Manage <b>Tags</b></h2>
                    </div>
                    <div class="col-sm-6">
                        <a data-target="#createTagModal" class="btn btn-success" data-toggle="modal"><i class="material-icons">&#xE147;</i> <span>Add New Tag</span></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-10 col-sm-10">
            {{#each tags}}
            <a class="btn btn-info btn-sm">{{this.tagname}}</a>
            <a data-target="#editTagModal" data-id={{this._id}} data-old="{{this.tagname}}" class="edit" data-toggle="modal"><i class="material-icons" data-toggle="tooltip" title="Edit">&#xE254;</i></a>
            <a data-target="#deleteTagModal" data-id={{this._id}} data-old="{{this.tagname}}" class="delete" data-toggle="modal"><i class="material-icons" data-toggle="tooltip" title="Delete">&#xE872;</i></a>
            {{/each}}
        </div>
    </div>

    <!--Create Tag-->
    <div id="createTagModal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <form method="post" action="/admin/createTag">
                    <div class="modal-header">
                        <h4 class="modal-title">New tag</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    </div>
                    <div class="modal-body">
                        <div class="input-group input-group-sm mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="inputGroup-sizing-sm">Name</span>
                            </div>
                            <input name="tagName" type="text" class="form-control" aria-label="Small" aria-describedby="inputGroup-sizing-sm">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
                        <input type="submit" class="btn btn-info" value="Save">
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!--Edit tag-->
    <div id="editTagModal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <form method="post" action="/admin/editTag">
                    <div class="modal-header">
                        <h4 class="modal-title">Edit tag</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    </div>
                    <div class="form-group" hidden="hidden">
                        <input type="text" name="tagId" id="tag" value="" />
                    </div>
                    <div class="form-group" hidden="hidden">
                        <input type="text" name="oldTag" id="oldtag" value="" />
                    </div>
                    <div class="modal-body">
                        <div class="input-group input-group-sm mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="inputGroup-sizing-sm">New name</span>
                            </div>
                            <input name="tagName" type="text" class="form-control" aria-describedby="inputGroup-sizing-sm" required>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
                        <input type="submit" class="btn btn-info" value="Save">
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Delete Answer Modal HTML -->
    <div id="deleteTagModal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <form method="post" action="/admin/deleteTag">
                    <div class="modal-header">
                        <h4 class="modal-title">Delete Tag</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    </div>
                    <div class="form-group" hidden="hidden">
                        <input type="text" name="tagId" id="tag" value="" />
                    </div>
                    <div class="form-group" hidden="hidden">
                        <input type="text" name="oldTag" id="oldtag" value="" />
                    </div>
                    <div class="modal-body">
                        <p>Are you sure you want to delete these Tag?</p>
                        <p class="text-warning"><small>This action cannot be undone.</small></p>
                    </div>
                    <div class="modal-footer">
                        <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
                        <input type="submit" class="btn btn-danger" value="Delete">
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
